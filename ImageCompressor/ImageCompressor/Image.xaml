<Page x:Class="ImageCompressor.Image"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ImageCompressor"
      mc:Ignorable="d"
      Title="Image" Height="450" Width="800">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="7.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="1" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="1" Margin="10" Grid.Column="0">
            <Grid>
                <TextBlock Text="拖放待压缩图像至此处" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <Border Grid.Row="1" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="1" Margin="10" Grid.Column="1">
            <Image x:Name="CompressedImage" Stretch="UniformToFill"/>
        </Border>
        
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Button Click="ImageCompressImageCompress" Content="压缩"  Margin="5"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Button Click="ImageSave" Content="保存"  Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
