<Window x:Class="ImageCompressor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageCompressor"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="500" 
        Width="900"
        MinHeight="500"
        MinWidth="900">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="5" Background="#3F51B5">
            <Button Content="Image" Click="Navi2ImagePage" Margin="5"
                    Style="{StaticResource NavigationButtonStyle}"/>
            <Button Content="Text" Click="Navi2TextPage" Margin="5"
                    Style="{StaticResource NavigationButtonStyle}"/>
            <Button Content="Page 3"   Margin="5"
                    Style="{StaticResource NavigationButtonStyle}"/>
        </StackPanel>
        
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="5"/>
    </Grid>
</Window>


