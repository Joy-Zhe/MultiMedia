<Page
    x:Class="Compressor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Compressor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Frame x:Name="MainFrame" />
        
        <NavigationView x:Name="NavView" PaneDisplayMode="Top" IsSettingsVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Home" Content="Home" Tag="home"/>
                <NavigationViewItem Icon="Camera" Content="压缩" Tag="image" />
                <NavigationViewItem Icon="Camera"  Content="解压" Tag="imageDeComp" />
                <!--<NavigationViewItem Icon="Document" Content="文本" Tag="text" />-->
            </NavigationView.MenuItems>
        </NavigationView>
    </Grid>
</Page>
